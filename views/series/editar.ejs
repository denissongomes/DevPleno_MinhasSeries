<%- include('../partials/header') %> 
<body id="page-top"></body>
   <section id="about">
     <div class="container">
       <div class="row">
         <div class="col-lg-8 mx-auto">
           <h2>Editar série</h2>
                <form method="POST">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nome</label>
                    <input type="text" name="name" value="<%= serie.name %>"class="form-control <% if(errors && errors.indexOf('name')>=0){  %> is-invalid <% } %>" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <% if(errors && errors.indexOf('name')>=0){  %> 
                      <div  id="invalidCheck3Feedback" class="invalid-feedback">
                        Por favor, informe o nome da série.
                      </div>
                      <% } %>
                  </div>
                  <div class="form-group">
                    <label for="status">Situação: </label>
                    <select class="form-control" id="status" name="status">
                        <% labels.forEach( label => { %>
                            <option value="<%= label.id %>" <% if(label.id === serie.status){ %> selected <% } %> ><%= label.name %></option>
                       <% }) %>  
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
                </form>
         </div>
       </div>
     </div>
   </section>
   <%- include('../partials/footer') %> 